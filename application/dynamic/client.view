        </tr>
      </thead>
      <tbody>
        <foreach member="root">
            <tr data-id="@int(idclient)">
              <th scope="row">@int(idclient)</th>
              <td>@string(name)</td>
              <td>@string(ident)</td>
              <td>@string(address)</td>
              <td>@string(phone)</td>
              <td>@string(email)</td>
              <td>@string(contact)</td>
              <td>
                <a class="btn btn-xs btn-danger btn-delete" href="#">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
              </td>
            </tr>
        </foreach>
      </tbody>
    </table>
